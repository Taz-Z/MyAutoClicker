<Window x:Class="MyAutoClicker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyAutoClicker"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <UniformGrid DockPanel.Dock="Top" Rows="2" Columns="2">
            <Button Content="Set Mouse Location" Grid.Column="0" Margin="10,10,10,10" Command ="{Binding ClickCommand }"/>
            <Button Content="Run" Grid.Column="1" Grid.Row="1" Margin="10,10,10,10" />
            <Button Content="Save Mouse Locations" Grid.Column="0" Grid.Row="2" Margin="10,10,10,10"></Button>
        </UniformGrid>

        <ListBox ItemsSource="{Binding Path=AllPoints}" DockPanel.Dock="Bottom" Height="180" Margin="50,50,50,50" VerticalAlignment="Top" Width="398"/>
    </DockPanel>
</Window>
